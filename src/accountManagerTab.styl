.accountManagerTab

	#toggleDisplayDeactivated
		float right
		font-size 14px
		line-height 20px

	.deactivatedAccount
		background #FFD3D3

		.btn-group
			display none

#modifyAccountDialog
	min-width 475px
	display flex

	section
		padding 15px
		flex 1

		&#accountDetails
			text-align center
			color darken(#B1B1B1, 50%)

			#avatar > .fa
				font-size 80px
				width 1.5em
				height 1.5em
				padding 15px
				margin 0px auto
				display inline-block
				text-align center
				color white
				background #B1B1B1
				border-radius 50%
				border 1px dashed white

			h3
				font-size 20px
				text-align center
				font-weight 300

			#userProgram > span
				border-bottom 2px solid transparent

		&#accountActions

			#actionsList
				text-align right

				h4
					margin-top 0

				ul
					list-style none
					padding 0
					margin 0

					li
						transition border-right-color .25s ease
						border-right 2px solid #eee
						padding 2px 0

						&:hover
							border-right-color #337ab7

						button
							outline none
							transition all .15s ease

							&:hover
								// padding-right 1em

