.createClientFileDialog
	min-width 350px
	max-width 400px

	.optionDropdowns
		display flex

		.programs
			flex 1

		.templates
			flex 1





	.btn-toolbar
		padding-top: 18px
		float right

		.template-container
			.dropdown-menu
				max-height 162px
				overflow-y auto

	.birthdateLabel
		vertical-align middle

	.birthDateSelector
		.btn-group-dropdowns
			width: 100%
			margin-bottom: 15px

			.btn-group
				width: 33.334%
				margin-left: 0px

				#birthMonthDropdown
					width: 100%
				#birthDayDropdown
					width: 100%
				#birthYearDropdown
					width: 100%

	.btnReset
		margin 0px 0px 3px 5px
		padding 0px
		outline none
		text-decoration none
		&:focus
			outline none

	.invisible
		visibility hidden
