#container > .newProgNotePage
	display flex

	height 100%

	> .loadError
		width 100%

		padding 200px

		text-align center

		> div
			> .btn
				margin 50px

	> .progNote
		flex 1
		overflow auto

		padding 20px
		
		.btn > .fa
			padding-right 8px
			
		.units
			
			.unit

				&.basic
					> .metrics
						display flex
						flex-wrap wrap

						margin -3px

						padding-top 5px

						> .metricWidget
							margin 3px

				&.plan
					> .empty
						padding 0 2px
						color #888
						
					> section
						> .target
							> .name
								margin 10px 0 5px

								color #666
								font-size 16px
								font-weight 600

							> .metrics
								display flex
								flex-wrap wrap

								margin -3px

								padding-top 5px

								> .metricWidget
									margin 3px

		> .buttonRow
			padding 20px

			text-align center

	> .progNoteDetailView
		flex 1
		
	> .eventsPanel
		flex-basis 70px
		text-align center
		padding-top 12px
		border-left 2px solid #eee
		
		> .title
			font-weight bold
			text-transform uppercase
			text-align center
			padding 10px 0px
			color #7C7C7C
			border-bottom 1px solid #eee
			margin-bottom 10px
		
		> .eventsList
			clear both
			display block
			max-height 100%
			
			&.editMode .icon
				opacity 0.35
				
			> .addEventButton
				border none
				margin-top 15px
				color green
			
			> .eventTab
				position relative
				background white
				
				display flex
				align-items center
				justify-content center
				
				> .icon
					width 50px
					height 50px
					
					display flex
					align-items center
					justify-content center
					
					> img
						width 60%
						height auto
					
				&.isEditing .icon					
					background white
					color black
					
				&:hover, &.isEditing
					
					> .eventView
						display block						
						
				&:hover > .eventView
					z-index 9999
						
					