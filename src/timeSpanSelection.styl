.timeSpanSelection
	position relative
	display flex
	flex-wrap wrap
	padding 8px 0
	margin-bottom 0

	input
		margin 0

	section
		flex 3
		display flex
		justify-content center
		text-align left
		padding-bottom 15px

		&:last-child
			min-width 200px

		> div
			flex 1

		&.arrow
			flex 1
			display flex
			justify-content center
			align-items center
			padding-top 20px

		.addEndDateButton
			display flex
			justify-content center
			align-items center
			text-align center
			border-radius 5px
			padding 15px

			&:hover
				color green
				background #eee

			.fa-plus
				margin 5px


		.fa-times:hover
			color red

		.endDateContainer
			.fa-times
				float right
				margin-top 3px
				margin-right 5px

		.timeOfDayToggleButton
			border 0


		.startDate, .endDate, .startTime, .endTime
			display flex

			.inputContainer
				flex 5

			.buttonContainer
				flex 1
				min-width 25px
				padding-left 5px

		.startDate, .endDate
			padding-bottom 5px

		&.usesTimeOfDay
			button
				display none
				flex 0