.planView
	display flex

	> .targetList
		flex 1
		overflow inherit
		display flex
		flex-direction column		

		> .empty
			text-align center

			> .message
				padding 100px 80px 50px

				color #888
				font-size 16px

			> .btn > .fa
				padding-right 10px

		> .toolbar
			padding 30px
			border-bottom 1px solid sidebar-borders
			display flex
			flex-wrap wrap
			
			> span
				flex 1
				
				&.leftMenu
					padding-right 5px
				
				&.rightMenu
					text-align right
			
				> .btn
					
					> .fa
						margin-right 8px
				
				.save
					width 100%
					transition all 0.5s ease
					
				.canSave
					width 60%
					
			@media (max-width: 1150px)
				display block

				> span
					display block
					flex none
					width 100%
					
					> .canSave
						width 100%
					
					&.rightMenu
						margin-top 10px
						display flex
						
						> .btn
							flex 3
							
						> .printButton
							flex 1

		> .sections
			position relative

			flex 1
			overflow-y auto
			overflow-x hidden
			padding 0 30px 10px 30px

			> .section
				&:last-child
					padding-bottom 15px

				> .sectionHeader
					display flex
					align-items center
					justify-content space-between

					border-color sidebar-borders
					border-style none none solid
					border-width 1px

					padding 10px 30px 5px

					&.inline
						margin 0 -30px

						&.invisible
							opacity 0

					&.sticky
						position absolute
						top 0
						left 0
						right 0

						background hsla(0, 0%, 100%, 0.8)

						&.invisible
							display none

					> .sectionName
						flex 1
						padding 5px 0

						font-size 24px
						font-weight 300

					> .btn-group > .btn > .fa
						padding-right 6px

				> .noTargets
					padding 25px 0

					color #888
					text-align center

				> .targets
					> .target
						margin-top 20px

						border 1px solid sidebar-borders
						border-radius 5px

						padding 15px 20px

						transition all 0.15s linear
						
						&.status-default
							// No additional styling
								
						&.status-cancelled
							border-color red
							
						&.status-completed
							border-color green

						&.hasChanges
							background #EEFFF5
							border-color #C9FFB2
							
						&.active
							background hsl(202, 35%, 94%)							
							
							&.hasChanges
								background #C9FFB2
								border-color #A4D291
						
						&.readOnly
							input[disabled], textarea[disabled]
								background white
								
						&.blink
							background #7ecdfc !important
							border-color #68AAD2 !important


						> .nameContainer, > .descriptionContainer
							> div
								cursor pointer

							> .field
								width 100%

								padding 2px 5px


						> .nameContainer
							display flex
							flex-direction row
							
							padding-bottom 15px
							font-weight 700
								
							> .statusButtonGroup
								display flex
															
								> .statusButton
									flex 1
									display flex
									justify-content center
									align-items center
									padding 8px
									padding-right 2px
									
									font-size 18px
									opacity 0.6
									transition opacity .15s ease
									
									&:hover
										opacity 1

						> .metrics
							display flex
							flex-wrap wrap

							margin -5px

							padding-top 15px

							> .metricWidget
								margin 5px

	> .targetDetail
		overflow-y auto
		overflow-x hidden
		flex 1

		border-left 2px solid sidebar-borders

		padding 0 30px

		> .noSelection
			padding 100px 0

			color #888
			text-align center

		> .targetDetailContainer
			> .metricsSection
				padding 20px 0
				
				.addMetricButton
					color #939393
					transition color .15s ease
					
					&:hover
						color #87FF18
					
					&:focus
						background none
						outline none

				> .header
					> .text
						font-size 24px
						font-weight 300

				> .noMetrics
					padding 40px

					color #888
					text-align center

				> .metrics
					display flex
					flex-wrap wrap
					padding 25px 0

					> .metricWidget
						margin 5px 10px 5px 0px
						
			@require 'planTargetHistory'