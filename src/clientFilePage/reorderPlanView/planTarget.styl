.planTarget
	display flex
	background white

	height 50px
	padding-right -10px
	opacity 1
	transition all .25s ease

	border 1px solid #cadbe5
	margin-top 5px
	border-radius 5px

	&.isDragging
		opacity 0.75

		.targetDragSource
			opacity 1
			background #3f903f !important
			color white

	&.isCollapsed
		height 0px
		overflow hidden
		padding 0
		margin 0
		border 0
		opacity 0

	&:hover
		.targetDragSource
			opacity 0.6

	.targetDragSource
		width 28px
		padding 10px
		border-radius inherit
		border-top-right-radius 0
		border-bottom-right-radius 0

		&:hover
			opacity 1
			background #eaf1f5

	.targetContainer
		flex 1
		display flex
		align-items center
		padding-left 1.5%

		> .name
			color #555
			font-size bold
			font-weight bold

			&:hover
				cursor default
				text-decoration underline
