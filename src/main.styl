// Override animate.css
.animated
	animation-duration .5s !important

// Override bootstrap
.modal
	&.fade
		.modal-dialog
			transition none !important
			transform none !important

.tooltip-inner
	max-width 400px

// Override cursor actions for app-like feel
a, button, input[disabled], label, th, .btn
	cursor default !important
	-webkit-user-select none !important

// always show scrollbars
::-webkit-scrollbar
	-webkit-appearance none
	width 7px

::-webkit-scrollbar-thumb
	border-radius 4px
	background-color rgba(0,0,0,.4)
	//background-color #cadbe5
	-webkit-box-shadow 0 0 1px rgba(255,255,255,.5)

html
	overflow hidden

html, body
	min-height 500px
	height 100%
	font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif
	// Apple default San Francisco, Win default Segoe, then common ss fonts

#container
	position relative
	display block !important
	height 100%

.shrink
	transform scale3d(0, 0, 0)

textarea
	// Allowing resizing usually messes up the layout.
	// See also: ExpandingTextArea
	resize none

