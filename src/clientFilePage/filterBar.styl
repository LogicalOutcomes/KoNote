.filterBar
	display flex
	background #eaf1f5
	color rgb(76, 93, 103)
	height 50px

	section
		display flex
		flex 1

		&:first-child
			padding-left 20px

		&:last-child
			padding-right 20px

		> div
			flex 1
			display flex
			align-items center
			justify-content center
			font-weight 500 !important
			opacity .75
			transition opacity .2s ease
			cursor default

			&:hover
				opacity 1

		input.form-control
			border none
			box-shadow none
			background none
			padding 10px 0
			height 100%
			font-size 1.1em

		.closeButton
			width 30px
			flex none
			display flex
			justify-content center
			align-items center

			.fa
				font-size 1.5em
				float right
				transition opacity .2s ease
				padding 5px

				&:hover
					opacity 0.75


	.filterDropdownMenu
		position relative
		z-index 9999

		ul.filterOptions
			margin 0
			padding 0
			list-style none
			position absolute
			top 100%
			left 0
			display none
			transition opacity .25s ease
			min-width 100%

			li
				background #eaf1f5
				border-bottom 1px solid #cadbe5
				padding 8px 12px

				&:hover
					background #cadbe5

				&:last-child
					border-bottom none

				.colorKeyBubble
					margin-right 10px

		&:hover
			ul.filterOptions
				display block
