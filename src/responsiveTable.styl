.responsiveTable
	flex 1
	display flex
	flex-direction column
	max-width 100%

	.react-bs-table-container
		display flex
		max-width 100%

		.react-bs-table
			flex 1
			height auto !important
			display flex
			flex-direction column
			max-width 100%

			margin 0
			border 0

			tr
				cursor default !important

				th
					cursor default !important

				// Add padding to first & last VISIBLE column
				td, th
					&:first-child
						padding-left 5%

					// Since last-child won't work in this case,
					// we assign .rightPadding to the furthest-right column
					// Issue: https://github.com/AllenFang/react-bootstrap-table/issues/628
					&.rightPadding
						padding-right 5% !important

			// TODO: Avoid setting this manually
			// (column headers hide completely without it for some reason...)
			.react-bs-container-header
				min-height 2.7em

			.react-bs-container-body
				font-size 1.1em

				.programBubbles
					flex-direction row-reverse

				.colorKeyBubble
					display flex
					flex-direction row-reverse
					font-size 1.5em !important

				tr
					background transparent
					transition background .15s ease

					&.inactive td
						background #FFD3D3

					&:hover td, &.activeIndex td
						background hsl(200, 80%, 90%) !important

					td
						vertical-align middle
						height 50px
						border none

						&.react-bs-table-no-data:hover
							background none !important


			// Consistent style classes for different types of column data
			// (rather than explicitly defining in TableHeaderColumn props)

			.colorKeyColumn
				width 100px

			.nameColumn
				width 300px

			.descriptionColumn
				font-size 0.9em !important

			.statusColumn
				width 200px
				font-size 0.9em !important

			// Override colorKeyBubbles to have white borders
			// (contrasts against hover/inactive backgrounds)
			.bubbleContents
				border 2px solid white !important
