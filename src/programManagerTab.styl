.programManagerTab
	
	.options
		text-align right !important
		padding 15px
		
	.btn > .badge
		margin-left 5px
		
	.orderableTable
			
		.tableCell
			&:first-child, &:last-child, &:nth-child(4)
				flex 0.5
		
		.tableBody
			
			.tableRow
				
				.descriptionCell
					flex 2
				
				.optionsCell
					justify-content center
					
					.btn-group
						visibility hidden
				
				&:hover .optionsCell .btn-group
					visibility visible !important				
						
					&.numberClientsCell
						text-align left
						.fa
							float left
							margin-right 5px
							margin-top 3px
							
					&.optionsCell
						text-align right