.filterBar
	display flex
	background #eaf1f5
	color rgb(76, 93, 103)
	height 50px

	section
		display flex
		flex 1

		&:first-child
			padding-left 20px

		&:last-child
			padding-right 20px

		> div
			flex 1
			display flex
			align-items center
			justify-content center
			font-weight 500 !important
			opacity .75
			transition opacity .2s ease
			cursor default

			&:hover
				opacity 1

		input.form-control
			border none
			box-shadow none
			background none
			padding 10px 0
			height 100%
			font-size 1.1em

		.closeButton
			width 30px
			flex none
			display flex
			justify-content center
			align-items center

			.fa
				font-size 1.5em
				float right
				transition opacity .2s ease
				padding 5px

				&:hover
					opacity 0.75