 .managerLayer
	position absolute
	width 100%
	height 100%
	z-index 1000
	background white
	
	.closeManagerButton				
		background none
		position absolute
		padding 10px 15px
		top 15px
		right 15px
		outline none !important
		border none
		font-size 22px
		z-index 99999				
		transition all .15s ease
		
		&:hover
			cursor pointer
			color red
			opacity 1					
	
	> .managerLayerContainer
		position relative
		width 100%
		height 100%
		display flex
		
		> div
			flex 1
			position relative
			display flex
			flex-direction column
			height 100%
				
			h1, h2, h3, h4, h5
				font-weight 300
				padding 0px 25px
			
			.main
				flex 1
				padding-top 25px
				overflow-y auto
				
			.optionsMenu
				padding 25px
				display flex
				align-items center
				justify-content center
				background sidebar-bg