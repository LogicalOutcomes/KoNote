#reorderPlanView

	.flexFiltersToolbar
		display flex
		align-content flex-start
		margin-top 2px
		//background rgb(234, 241, 245)
		border-bottom 1px solid sidebar-borders
		color rgb(76, 93, 103)

		aside, section
			padding 8px 10px

		aside
			flex 1
			max-width 100px
			display flex
			align-items center
			justify-content center
			font-weight 500

		section
			flex 2
			max-width 135px
			justify-content center

			label
				font-weight 300
				margin 0

			input[type=checkbox]
				margin 0px 5px

	#reorderContainer
		padding-top 25px

		&.shrinkFontSize
			font-size 0.85em

	@require planSection
	@require planTarget