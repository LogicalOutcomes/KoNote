.printPreview
	
	.printObj
		padding 25px

		> .header
			display flex
			width 100%
			padding-bottom 15px
			border-bottom 3px dotted #eee

			> .leftSide
				flex-grow 1
				
				> .title
					margin-top 0
					
				> .clientName
					font-weight 700
					font-size 26px
					
				> .clientRecordId
					font-weight 500

			> .rightSide
				flex-grow 1
				text-align right
				
				> .logo
					-webkit-filter grayscale(100%)
					float right
					width 100px
					height auto
					margin-left 15px
					
				> ul
					list-style none
					font-size 16px
					margin 0
					padding 0
					margin-top 5px
					
					> li
						list-style none
						
						> .fa
							float right
							margin-left 5px
						
						> .author
							font-weight bold
							
						&.date
							font-size 15px
							font-weight 600
							
						&:not(.date)
							text-decoration underline
			


		> .progNote
			
			&.basic
				> .notes
					padding 20px 0

					> br
						display block

			&.full
				> .sections
					
					> .section
						padding-bottom 15px
						border-bottom 1px solid #C9C9C9
						
						> .name
							font-size 22px
							font-weight 400

						&.basic
							> .name
								cursor pointer

							> .empty
								padding 0 2px

								color #888

							> .metrics
								padding-top 5px

						&.plan
							> .empty
								padding 0 2px

								color #888

							> .targets
								
								> .target
									display inline-block
									width 50%
									vertical-align top
									padding 0 15px
									
									> .name
										margin 15px 0 5px

										color #666
										cursor pointer
										font-size 16px
										font-weight 600

									> .empty
										padding 0 2px

										color #888

									> .metrics
										display flex
										flex-wrap wrap

										margin -5px

										padding-top 5px

										> .metricWidget
											margin 5px
											background none
											border 1px solid #999999
											
											> .name
												color black
											
											> .value
												color black
												background none
												border 1px solid #707070
