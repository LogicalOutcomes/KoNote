.quickNoteView
	.notes
		transition all .25s ease
		cursor default
		padding-right 20px
		border-left 2px solid rgba(255,255,255, 0) // avoid reflow when added on select
		margin-top 10px

	.attachments
		padding 10px 0 5px 0