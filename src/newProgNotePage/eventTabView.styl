.eventView
	display none
	position absolute
	top 0px
	left -285px
	width 285px

	text-align left
	border 3px solid #eee
	border-right none
	padding 20px

	box-shadow: -9px 3px 14px 0px rgba(0,0,0,0.2);

	color black
	background white


	.details
		font-size 12px

		> .title
			font-size 14px
			font-weight bold

		> .timeSpan
			margin-top 15px

	> form

		.btn-toolbar .btn-success
			margin-left 5px
			margin-top 10px

		.expandingTextAreaComponent
			max-height 140px

		button.closeButton
			position absolute
			top -10px
			left -10px
			padding 2px 6px
			border-radius 15px

		.titleContainer
			display flex

			> div
				flex 1

				&:first-child
					padding-right 5px
					flex 3

				&:last-child
					flex 5

			.dropdown
				width 100%

				button
					width 100%

			#titleInput
				display block
				width 100%

		.eventTypeContainer
			cursor default !important

			.dropdown, .dropdown-toggle
				outline none
				width 100% !important

			.dropdown-menu
				max-height 350px
				max-width 300px
				overflow-x hidden
				overflow-y auto

			.section a
				font-weight 600

			.target a
				font-size 0.9em
				padding-left 25px


		.globalEventContainer
			label
				.fa
					margin-left 1em

			.disabled label
				opacity 0.5 !important

		.timeSpanSelection

		// Shifts datetimepicker to left
			.bootstrap-datetimepicker-widget.dropdown-menu
				right 90% !important

			section
				&.arrow
					display none

				&:last-child
					padding-bottom 0

				.addEndDateButton
					padding 8px

					label
						margin 0

					.fa
						margin 0 5px 0 0

					> div
						display flex
						flex-direction row-reverse