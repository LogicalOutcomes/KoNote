.progNotesView
	flex 1
	overflow auto
	display flex
	flex-direction column

	mark
		background yellow
		padding 0

		.popover
			z-index 1001
			max-width none

			.popover-content
				> textarea
					width 500px
					height 300px

				> .buttonBar
					padding 10px 0 0

					text-align right

					> .btn
						margin-left 5px

	.panes
		overflow auto
		display flex
		flex 1

		> section
			flex 1
			display flex
			flex-direction column
			overflow auto

			&.leftPane

				> .empty
					flex 1
					display flex
					text-align center

					> .message
						flex 1
						padding 100px 15% 50px 15%

						color #888
						font-size 16px

						> div
							padding 5px 0

						#resetFilterButton
							outline none

							> .fa
								margin-right 5px

						.colorKeyBubble
							margin-left 6px

							.bubbleContents
								width 1.3rem
								height 1.3rem

						> .btn
							margin-top 50px

							&:last-child
								margin-left 5px

							> .fa
								padding-right 10px


				// quickNote popover styles
				.popover
					max-width none

					.popover-content
						> textarea
							width 500px
							height 300px

						> .buttonBar
							padding 10px 0 0

							text-align right

							> .btn
								margin-left 5px

			&.rightPane
				border-left 2px solid sidebar-borders

		#entriesListView
			flex 1
			overflow-y auto
			overflow-x hidden
			overflow-wrap break-word
			padding 10px 20px
			padding-top 22px

			.attachment
				color #337ab7
				font-weight 500

			.entry
				margin-right -7px // Offset against selectedTarget left-border

				&.flashDestination
					$duration = 1.25s

					.entryHeader
						animation flashHeader $duration

						.timestamp
							animation bolden $duration


				$highlightColor = darken(sidebar-borders, 25%)

				@keyframes flashHeader
					50%
						padding-left 20px
						margin-left -20px
						border-color #569ace

				@keyframes bolden
					50%
						color black !important
						font-weight 500


			.entryHeader
				display flex

				border-bottom 2px solid sidebar-borders

				padding 7px 0

				font-size 14px
				font-weight 300

				h1
					padding 20px 0 10px 0
					margin 0

				.revisions
					margin-right 10px

				> div
					display flex
					align-items center

				> .timestamp
					flex 1
					display flex
					align-items center

					.lateTimestamp
						color darkRed
						font-size 0.8 em
						display inline-block
						padding-left 4px

				> .options
					.entryHeaderDropdown
						padding 1px 10px !important
						margin-bottom -3px
						border-radius 15px
						padding 2px 10px 2px 10px
						border 0
						margin-left 5px

					.dropdown-menu
						min-width 90px
						text-align right
						margin-top 9px
						border-top-right-radius 0px
						border-top-left-radius 0px
						border-top 0

				.colorKeyBubble > .bubbleContents
					width 10px
					height 10px
					margin-left 0.5em

				.selectProgNoteButton
					opacity 0.75
					color rgb(76, 93, 103)
					margin-left 10px
					cursor default

					&:hover
						opacity 1
						text-decoration underline


			> .cancelStub
				margin 0 -6px 20px

				border 1px solid hsl(22, 85%, 80%)
				border-radius 3px

				background hsl(22, 85%, 93%)

				padding 11px 14px

				> .toggleDetails
					float right

				> h3
					margin 0

					padding 0 0 10px

					font-size 16px
					font-weight 700

				> .details
					> h4
						margin 0

						padding 10px 0

						font-size 14px

					> .reason
						padding 0 10px

						font-style italic

					> .progNote
						padding 20px 0 0 !important


			> .globalEventView
				padding-bottom 30px

				h3
					.fa
						color #07488b
						margin-right 14px

				p
					padding-left 35px

			> .progNote, > .cancelStub > .details > .progNote
				flex 1

				padding-bottom 30px

				> .notes
					padding-top 15px

					> div // Quick Note
						position relative
						cursor default
						border-left 2px solid rgba(255,255,255, 0) // avoid reflow when added on select
						transition all .25s ease
						padding-left 0px
						padding-right 20px

						&:hover
							opacity 0.75

				&:hover .progNoteToolbar
					opacity 1

					.revisions // selectedItem styling applied inline (InlineSelectedItemStyles)
						margin-right 0

				.progNoteList
					position relative

					h1, h2, h3
						margin 0

					.progEvents

						h3
							padding-top 20px
							padding-bottom 5px

					> .unit

						&:last-child
							padding-bottom 0px

						h1
							padding 15px 0
							font-size 28px

						h2
							padding 10px 0
							font-size 22px
							font-weight 100

						h3
							padding 6px 0
							font-weight 600
							font-size 18px
							opacity 0.75

						.notes
							overflow-wrap break-word

							.starred
								font-weight 600
								background-color yellow

						&.basic // selectedItem styling applied inline (InlineSelectedItemStyles)
							margin-top 10px
							cursor default
							border-left 2px solid rgba(255,255,255, 0) // avoid reflow when added on select
							transition all .25s ease
							padding-left 0px
							padding-right 20px

							&:not(.isEditing):hover
								opacity 0.75

							h3
								margin 0
								font-size 14px

							> .empty
								padding 0 2px
								color #888

							> .metrics
								padding-top 5px

						&.plan
							> .empty
								padding 0 2px
								color #888

							h3
								font-size 14px

							section
								&:first-child
									padding-top 10px

								> .target // selectedItem styling applied inline (InlineSelectedItemStyles)
									cursor default
									margin-bottom 15px
									border-left 2px solid rgba(255,255,255, 0) // Avoid reflow when selectedItem
									transition all .25s ease
									padding-left 0px
									padding-right 20px

									&:not(.isEditing):hover .notes
										opacity 0.75

									> .empty
										padding 0 2px

										color #888

									> .metrics
										display flex
										flex-wrap wrap

										margin -5px

										padding-top 5px

										> .metricWidget
											margin 5px


	@require entryDateNavigator
