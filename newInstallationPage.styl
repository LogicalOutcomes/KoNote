#newInstallationPage	
	height 100%
	display flex
	flex-direction column
	justify-content center
	align-items stretch
	
	overflow hidden
	background-color: #3176aa
	color #fff
	
	section
		display flex
		flex-direction column
		
		height 100%
		
		align-items: center
		justify-content: center
		
		> #brandContainer
			flex 9
			text-align center
			margin-bottom: -50px
			display flex
			flex-direction column
			justify-content center
			
			> div
			
				img
					height 185px
					width auto
					
				#version
					font-size 18px
					line-height 26px
					font-weight 300
				
		
		> .contentContainer
			display flex
			flex-direction column
			flex 7
			padding 25px
			align-items center

			
			> div
				display flex
				flex-direction column
				align-items center
					
				h1
					font-size 38px
					line-height 76px
					margin-bottom 25px
					
					font-weight 700
					text-align center
					
				p
					font-size 19px
					line-height 1.75em
					
					font-weight 400
					text-align center
					
				.form-group
					width 50%
					min-width 200px
					position relative
					
					input
						position relative
						letter-spacing 2px
					
					.glyphicon
						opacity 0
					&.has-success .glyphicon
						opacity 1
					
				.btn .fa 
					margin-left 15px