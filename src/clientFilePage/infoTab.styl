$side-padding = 25px

.infoView
	flex 1
	display flex
	flex-direction column

	label
		font-weight 300
		opacity 0.75

	input, textarea
		font-weight 400


	.menuBar
		display flex
		height 60px // Match to flexButtonToolbar
		border-bottom 1px solid sidebar-borders

		@media (max-width: 750px)
			&:not(.hasChanges)
				.flexButtonToolbar
					display none

			&.hasChanges
				.title
					display none

		.title
			flex 3
			display flex
			align-items center

			> span
				font-weight 300
				font-size 26px
				opacity 0.8
				padding-left $side-padding

		.flexButtonToolbar
			flex-direction row-reverse // animates from right-side
			flex 1
			min-width 335px


	.detailUnitsContainer
		flex 1
		flex-direction row
		overflow auto

		// Use table for column-aligned layout
		table
			width 100%

			tbody > tr > td
				padding 3px 0
				min-width 100px
				vertical-align top

				&:first-child
					opacity 0.75
					font-weight 300
					width 25%
					padding-top 10px

				&:last-child
					padding-right 5%

		input, textarea
			&[disabled]
				background white

			&::-webkit-input-placeholder
				font-style italic


		#basicInfoGroup
			display flex
			flex-direction row
			flex-wrap wrap

			> section
				flex 2
				min-width 335px

				&.avatar
					flex 1
					display flex
					width auto
					// max-width 225px
					padding-right $side-padding
					justify-content center
					align-items center
					padding 15px

					> div
						display flex
						justify-content center
						align-items center

						width 150px
						height 150px
						border-radius 100px

						padding 20px
						background sidebar-borders

						> .fa
							color white
							font-size 85px

				&.nameId
					padding-right 5%

				&.status
					padding $side-padding 0


		.detailUnitGroups

			&:last-child
				padding-bottom 10px

		.detailUnitGroup
			padding $side-padding
			border-bottom 1px solid #eee

			input, textarea
				&[disabled]
					border-color transparent
					box-shadow none

			&:not(.isSelected)
				input, textarea
					border-color transparent
					box-shadow none

					&:not([disabled]):hover
						border-color rgb(204, 204, 204)
						box-shadow rgba(0, 0, 0, 0.075) 0px 1px 1px 0px inset

			&:last-child
				padding-bottom 10px
				border-bottom none

			h4
				margin-top 0
				margin-bottom 20px

			table
				padding-left 2%
