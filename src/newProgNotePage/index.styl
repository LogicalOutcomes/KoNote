.newProgNotePage
	background white
	display flex
	height 100%

	.backdateMessage
		text-align center
		color red
		padding 15px
		padding-bottom 0px

	> .loadError
		width 100%
		padding 200px

		text-align center

		> div
			> .btn
				margin 50px

	.backdateContainer
		padding 13px 20px


	// Main ProgNote Area

	> .progNote
		flex 1
		position relative
		overflow auto

		// Regular ProgNote Styles

		h1
			text-align center
			font-size 26px
			font-weight 300

		h2
			margin 20px 10px 0px 10px
			font-size 20px
			font-weight 200

		h3
			margin-top 2px
			font-size 14px
			color #4c5d67

		.units
			padding-bottom 80px

			.unit
				padding-bottom 15px

				&.basic
					padding-right 15px
					padding-left 15px

					> .metrics
						display flex
						flex-wrap wrap

						margin -3px

						padding-top 5px

						> .metricWidget
							margin 3px

				&.plan

					> .empty
						text-align center
						padding 15px
						color #888

					> section

						> .target
							padding 10px
							border-bottom 1px solid lightgray

							&:first-child
								padding-top 2px

							&:last-child
								border-bottom 1px solid lightgray

							textarea
								border 1px solid rgba(255,255,255,0)
								box-shadow inset 0 1px 1px rgba(255,255,255,0)
								padding 0px

							.star
								color #888
								float right
								border none
								opacity 0

								&:hover
									color #337ab7

								> .checked
									color yellow
									-webkit-text-stroke 1px #888

							> .name
								margin 10px 0 5px

								color #666
								font-size 16px
								font-weight 600

							> .metrics
								display flex
								flex-wrap wrap

								margin -3px

								padding-top 5px

								> .metricWidget
									margin 3px

							&:hover .star
								opacity 1


		#shiftSummaryField
			margin-top 25px

		#saveNoteButton
			position fixed
			bottom 10px
			left 15%
			width 150px
			border 2px solid white

			.fa
				font-size 20px
				margin-left 10px

	> .progNoteDetailView
		flex 1
		border-left 2px solid rgb(204, 220, 230)


	> .eventsPanel
		flex-basis 70px
		text-align center
		padding-top 12px
		border-left 2px solid #eee

		> .title
			font-weight bold
			text-transform uppercase
			text-align center
			padding 10px 0px
			color #7C7C7C
			border-bottom 1px solid #eee
			margin-bottom 10px

		> .eventsList
			clear both
			display block
			max-height 100%

			&.editMode .icon
				opacity 0.35

			> .addEventButton
				border none
				margin-top 15px
				color green

			> .eventTab
				position relative
				background white

				display flex
				align-items center
				justify-content center

				> .icon
					width 50px
					height 50px

					display flex
					align-items center
					justify-content center

					> img
						width 60%
						height auto

				&.isEditing .icon
					background white
					color black

				&:hover, &.isEditing

					> .eventView
						display block

				&:hover > .eventView
					z-index 1000