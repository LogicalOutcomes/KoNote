#newInstallationPage
	height 100%
	display flex
	flex-direction column
	justify-content space-between
	align-items center

	overflow hidden
	color #333

	.spinnerOverlay
		padding 20px

	> #brandContainer
		padding-top 40px

		img
			height 185px
			width auto

	> #contentContainer
		display flex
		flex-direction column
		align-items center
		justify-content space-around
		height 100%

		#passwordFields
			.btn
				margin 0
			.btn-success
				color #fff
				background-color #5cb85c

				&:hover
					background-color green

		> div
			display flex
			flex-direction column
			align-items center

			p
				font-size 18px
				margin-bottom 50px

			button
				margin 10px
				width 260px
				background-color #fff
				outline none

			input
				width 260px

			.btn-success
				color green

				&:hover
					color white
					background-color #5cb85c

			.form-group

				.glyphicon
					opacity 0
				&.has-success .glyphicon
					opacity 1

			.btn .fa
				margin-left 15px

	> #helpContainer
		padding 20px 25px
		width 100%

		span, a
			opacity .8

		a
			color #333
			text-decoration none
			transition all .25s ease

			&:hover
				color #000
				opacity 1

		.left
			float: left
		.right
			float: right
