.planTarget
	display flex

	border 1px dashed rgba(0,0,0,0.5)
	margin-top 5px
	border-radius 5px
	transition all .25s ease

	&.isDragging
		background #eaf1f5
		opacity 0.75

		.targetDragSource
			background none !important

	&.collapsed
		display none
		height 0px
		overflow hidden
		padding 0
		margin 0
		border 0

	.targetDragSource
		padding 15px
		border-radius inherit
		border-top-right-radius 0
		border-bottom-right-radius 0

	&:hover
		.targetDragSource
			opacity 1

	.targetContainer
		flex 1
		display flex
		align-items center
		padding-left 1.5%

		> .name
			color #555
			font-weight bold

			&:hover
				cursor default
				text-decoration underline
