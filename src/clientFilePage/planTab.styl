.planView
	flex 1
	display flex

	@require 'reorderPlanView'

	> .targetList
		flex 1
		overflow inherit
		display flex
		flex-direction column

		> .empty
			text-align center

			> .message
				padding 100px 80px 50px

				color #888
				font-size 16px

			> .btn, .templates
				margin 5px

			> .btn > .fa
				padding-right 10px


		> .sections, > div > .sections
			position relative

			flex 1
			overflow-y auto
			overflow-x hidden
			padding 25px
			padding-top 10px

			// TODO: Make this multi-use (it's used again in targets!)
			&.status-completed, &.status-deactivated
				padding 0

			.inactiveSectionHeader
				cursor default
				font-size 16px
				opacity 0.8
				transition opacity .15s ease

				&:hover
					opacity 1

				.fa
					font-size 1.25em
					padding 12px 8px
					transform rotate(0deg)
					transition transform .25s ease

					&.expanded
						transform rotate(90deg)

			.section
				padding-bottom 25px

				&.status-completed, &.status-deactivated
					padding 0
					padding-left 20px

				> .sectionHeader
					display flex
					align-items center
					justify-content flex-end

					border-color sidebar-borders
					border-style none
					border-width 1px

					padding 10px 25px 5px 10px

					> .statusButtonGroup
						display flex

						> .statusButton
							display flex
							flex 1
							cursor default
							justify-content center
							align-items center
							padding 8px
							padding-right 2px

							font-size 18px
							opacity 0.6
							transition opacity .15s ease

							&:not([disabled]):hover
								opacity 1

					&.inline
						margin 0 -30px

						&.invisible
							opacity 0

					> .sectionName
						flex 1
						padding 5px 0

						font-size 24px
						font-weight 300

						cursor default

						&:hover .renameIcon
							opacity 0.8

						.renameIcon
							opacity 0
							font-size 0.7em
							padding-left 10px
							transition opacity .3s ease

					> .btn-group > .btn.addTarget > .fa
						padding-right 6px

				> .noTargets
					padding 25px 0

					color #888
					text-align center

				> .targets
					padding 15px 0

					// TODO: Make this multi-use
					&.status-completed, &.status-deactivated
						padding 0
						padding-left 20px

					> .inactiveTargetHeader
						cursor default
						font-size 16px
						opacity 0.8
						transition opacity .15s ease

						&:hover
							opacity 1

						.fa
							font-size 1.25em
							padding 12px 8px
							transform rotate(0deg)
							transition transform .25s ease

							&.expanded
								transform rotate(90deg)

					> .target
						margin-bottom 20px

						border 1px solid sidebar-borders
						border-radius 5px

						padding 15px 20px

						transition all 0.15s linear

						&:last-child
							margin-bottom 0 !important

						&.hasChanges
							background #EEFFF5
							border-color #C9FFB2

						&.isSelected
							background hsl(202, 35%, 94%)

							&.hasChanges
								background #C9FFB2
								border-color #A4D291

							> .nameContainer, > .descriptionContainer
								input, textarea
									border 1px solid #ccc
									box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)

							> .nameContainer
								> .statusButtonGroup
									display flex

							> .metrics

								.addMetricButton
									outline none
									display block

									text-decoration none

						&.readOnly
							input[disabled], textarea[disabled]
								background white

						&.blink
							background #7ecdfc !important
							border-color #68AAD2 !important

						> .nameContainer, > .descriptionContainer
							> div
								cursor default

							> .field
								width 100%

							input, textarea
								padding 2px 5px
								border-color transparent
								box-shadow none
								transition none

						> .nameContainer
							display flex
							flex-direction row

							padding-bottom 15px
							font-weight 700

							> .statusButtonGroup
								display none

								> .statusButton
									flex 1
									display flex
									justify-content center
									align-items center
									padding 8px
									padding-left 12px
									padding-right 2px

									font-size 18px
									opacity 0.6
									transition opacity .15s ease

									&:not([disabled]):hover
										opacity 1

						> .metrics
							padding-top 15px

							> .metricsList
								display flex
								flex-wrap wrap

								margin -5px

								> .metricWidget
									margin 5px

							> .metricLookupContainer
								clear both
								display none

	> .targetDetail
		overflow-y auto
		overflow-x hidden
		flex 1
		display flex

		border-left 2px solid sidebar-borders

		> .revisionHistoryContainer
			flex 1
			display flex

			.revisionHistory
				flex 1

		> .noSelection
			flex 1
			padding 100px 0

			color #888
			text-align center

