.progNoteDetailView
	display flex
	flex-direction column

	> .noSelection
		padding 200px 50px

		color #888
		text-align center

	> .itemName
		border-bottom 2px solid hsl(202, 34%, 85%)

		padding 10px 20px

		font-size 24px
		font-weight 300

	> .history
		flex 1

		overflow auto

		padding-top 20px

		> .entry
			padding 0 20px 20px

			> .timestamp
				padding-bottom 4px

				color #888
				font-weight 600
