 .managerLayer
	position absolute
	width 100%
	height 100%
	z-index 9999
	background white
	
	.closeManagerButton				
		background none
		position absolute
		padding 10px 15px
		top 15px
		right 15px
		outline none !important
		border none
		font-size 22px
		z-index 99999				
		transition all .15s ease
		
		&:hover
			cursor pointer
			color red
			opacity 1					
	
	> .managerLayerContainer
		position relative
		width 100%
		height 100%
		display flex
		
		> div
			flex 1
			position relative
			display flex
			flex-direction column
			height 100%
			
			.header						
				border-bottom 2px solid sidebar-borders
				
				h1
					font-weight 300
					padding 0px 25px
			
			.main
				flex 1
				padding-top 25px
				
				table
					th
						opacity .8
						
						&:hover
							cursor pointer
							opacity 1

					th:first-child, td:first-child
						padding-left 25px
					th:last-child, td:last-child
						padding-right 25px
				
			.optionsMenu
				padding 25px
				display flex
				align-items center
				justify-content center
				border-top 2px solid sidebar-borders
				background sidebar-bg