.analysisView
	flex 1
	display flex
	flex-direction column

	.noData
		flex 1

		display flex
		align-items center
		justify-content center
		flex-direction row !important

		padding 100px

		color #AAA
		font-size 24px
		font-weight 700
		text-align center

	.mainWrapper
		flex 1
		display flex
		flex-direction row
		align-items stetch

		.leftPanel
			flex 5
			display flex
			flex-direction column
			border-right 2px solid sidebar-borders

			.timeScaleToolbar
				flex 1
				flex-basis 85px
				padding 0 20px 0 20px

				.slider
					width 100%

					.slider-track
						border-radius 15px
						height 16px

						.slider-track-low, .slider-track-high
							border-radius 15px
							background #e4eff5

						.slider-selection
							border-radius 0px
							box-shadow none
							background #c8dae4

					.slider-handle
						transition opacity 0.2s ease
						opacity 0.8
						background #3b4e59 !important
						margin-top 3px
						border 3px solid white

						&:hover
							opacity 1

					.tooltip
						margin-top -33px

						.tooltip-inner
							background sidebar-borders
							color #4c5d67
							font-size 13px
							padding 4px 10px

						.tooltip-arrow
							border-top-color sidebar-borders

					.slider-tick-label-container
						margin-left -15% !important
						margin-right -15% !important

						> .slider-tick-label
							width 25% !important
							text-align center !important

				> .timeSpanContainer
					flex 4
					display block
					position relative
					padding 35px 3% 0px 3%

					> .dateDisplay
						position absolute
						left 0
						right 0

						display flex
						width 100%
						padding 20px

						> .timeSpanDate
							flex 1

							&:first-child
								text-align left

							&:last-child
								text-align right

							> .date
								position relative
								transition background .25s ease
								cursor default
								background #fff
								padding 6px

								border-radius 5px
								border 1px solid sidebar-borders

								font-weight 400
								color #5c5c5c

								&:hover
									background #f9f9f9

									.fa
										margin 0 2px

								> input // Hidden so span below can represent the date
									position absolute
									bottom 0
									left 0
									width 2px
									border 0
									height 100%
									padding 0
									outline none
									opacity 0

								> span
									padding 3px 5px

									.fa
										transition margin .25s ease
										color #8CA6B5
										margin 0



				> .granularContainer
					flex 2

			.chartContainer
				flex 50
				display flex
				height 80%

				padding 20px 5px

				> .c3Chart
					flex 1

		.selectionPanel
			flex 2
			display flex
			flex-direction column
			padding-top 10px
			overflow-y auto
			overflow-x hidden

			.noData
				padding 10px
				font-size 14px
				font-weight 400

			.dataType
				clear both
				padding-bottom 15px

				h2
					font-size 24px
					font-weight 300
					margin 0
					padding 15px
					border-bottom 1px solid sidebar-borders
					transition all .15s ease

					input[type=checkbox]
						height 18px
						margin-right 10px
						// margin-left -5px

					.helper
						opacity 0
						font-size 10px
						line-height 24px
						float right

					&:hover
						cursor default
						color white
						background sidebar-borders
						color #456E86

						.helper
							opacity 1


				h3
					font-size 13px
					letter-spacing 1px
					font-weight 700
					margin 0
					padding 10px
					text-transform uppercase
					color grey

				.checkbox
					margin 0
					padding-bottom 5px

					label
						width 100%

					.colorKeyCount
						float right
						display flex
						align-items center
						justify-content center
						background #d2d2d2
						min-width 18px
						height 18px
						padding 0 2px
						text-align center
						font-size 10px
						font-weight 700
						color white
						text-shadow 0 1px 1px rgba(0,0,0,0.3)

						&.circle
							border-radius 10px
							width 20px
							height 20px

					.fa-star // Same as from newProgNotePage
						opacity 0
						transition opacity .15s ease
						color #888
						float right
						border none
						margin-top 3px
						margin-right 5px

						&:hover
							color #337ab7

					&:hover .fa-star
						opacity 1

					&.isHighlighted .fa-star
						opacity 1
						color yellow
						-webkit-text-stroke 1px #888

				.dataOptions
					padding 0px 15px 0 25px

					label
						color #5c5c5c

				.chartTypeContainer
					padding 10px

					> label
						padding-left 10px
						padding-right 2px

				&.metrics
					h4
						padding 0
						margin 0
						font-size 14px
						font-weight 600

					section
						padding-left 15px
						margin-bottom 15px
						border-left 1px solid #eee