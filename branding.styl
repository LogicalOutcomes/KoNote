.konodeBrandContainer
	position absolute
	bottom 0px
	overflow-y hidden
	overflow-x visible
	padding 20px
	
	.logoKN
		height 20px
		display inline-flex
		
		transition transform 0.8s ease
		transform rotate(-180deg)
	
	.logoKonode
		display inline-flex
		height 15px
		width auto
		
		transition all 0.5s ease
		margin-bottom -20px				
		opacity 0
		
	&:hover
		
		.logoKN
			transform rotate(360deg)
		
		.logoKonode
			margin-bottom 2px
			opacity 1
			

.brandLeft
	left 0px
	
	.logoKN
		float left
	.logoKonode
		margin-left 10px

.brandRight
	right 0px
	
	.logoKN
		float right
	.logoKonode
		margin-right 10px