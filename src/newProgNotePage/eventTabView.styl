.eventView
	display none
	position absolute
	top 0px
	left -285px
	width 285px

	text-align left
	border 3px solid #eee
	border-right none
	padding 20px

	box-shadow: -9px 3px 14px 0px rgba(0,0,0,0.2);

	color black
	background white


	.details
		font-size 12px

		> .title
			font-size 14px
			font-weight bold

		> .timeSpan
			margin-top 15px

	> form

		.btn-toolbar .btn-success
			margin-left 5px

		.expandingTextAreaComponent
			max-height 140px

		#nameInput
			display block
			width 100%

		button.fullWidth
			width 100%

		button.closeButton
			position absolute
			top -10px
			left -10px
			padding 2px 6px
			border-radius 15px

		.planRelationContainer, .eventTypeContainer
			cursor default !important

			.dropdown, .dropdown-toggle
				outline none
				width 100% !important

			.dropdown-menu
				max-height 350px
				max-width 300px
				overflow-x hidden
				overflow-y auto

			.section a
				font-weight 600

			.target a
				font-size 0.9em
				padding-left 25px

		.globalEventContainer
			label
				.fa
					margin-left 1em

		.dateGroup
			display flex

			.removeDateSpan
				flex 0.75
				display flex
				align-items flex-end

				span
					display block

					.fa
						margin-bottom 12px

						&:last-child
							display none

					&:hover
						color red
						cursor default

						.fa:first-child
							display none
						.fa:last-child
							display inline-block

			.form-group
				position relative

				label
					display block

			.date
				flex 4

			.timeOfDay
				flex 3
				padding-left 15px

				label
					text-align center

					span
						.fa:last-child
							display none

						&:hover
							color red
							cursor default

							.fa:first-child
								display none
							.fa:last-child
								display inline-block

			.useTimeOfDay
				flex 1
				display flex
				align-items flex-end
				justify-content center

				button
					border none
					color green


				// Shifts datetimepicker to left
				.bootstrap-datetimepicker-widget.dropdown-menu
					right 50% !important


