#entryDateNavigator
	position absolute
	bottom 15px
	margin-right 15px
	z-index 1000

	> div
		display flex
		flex-direction column
		align-items center
		position relative


	$dimension = 4rem

	.bootstrap-datetimepicker-widget
		left .475rem !important

	button
		flex 1
		justify-content center
		align-items center
		background rgba(255,255,255,0.8)
		outline none
		box-shadow 0px 0px 5px white

		color #506069
		border 2px solid #cadbe5
		border-radius 25px
		width $dimension
		height $dimension
		padding-top 3px // Makes sure icon's vert-centered
		overflow visible

		transition opacity .5s ease

		&:hover, &:focus, &.isScrolling // selected
			background #cadbe5

		&:focus, &.isScrolling
			border-color #aec2ce

		&.isScrolling
			opacity .75

		.fa
			font-size 2rem

	input
		visibility hidden
		width unit($dimension / 2, 'rem')
		border 0
		height 0

	// Custom styles for months/days/year whether enabled/disabled
	.month, .day, .year
		border-radius 0

		&.disabled
			color #b5b5b5
			background rgb(232, 232, 232)

		&:not(.disabled):hover
			background #337ab7
			color white

	// Disable decade selection
	.bootstrap-datetimepicker-widget .datepicker-years thead .picker-switch
		cursor default
		pointer-events none
