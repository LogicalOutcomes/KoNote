// Technical debt: Need to control color variables from 1 single doc
logo-maroon = #892652
logo-teal = #70b0d3
logo-light-blue = #83c4ea
sidebar-bg = hsl(hue(logo-light-blue), 35%, 94%)
sidebar-borders = darken(sidebar-bg, 10%)

#container > #clientSelectionPage
	background white
	display flex
	overflow hidden
	height 100%

	> #shiftSummariesContainer
		position absolute
		bottom 20px
		width 200px
		left 50%
		margin-left -100px
		text-align center
		z-index 1000

	> #expandMenuButton
		background none
		position fixed
		padding 10px 30px 10px 20px
		top 25px
		right 0px
		outline none !important
		z-index 1001
		transition all .25s ease

		font-size 19px
		font-weight 300
		color #686868
		border 1px solid #eee
		border-top-left-radius 10px
		border-bottom-left-radius 10px
		border-right 0px

		&:hover
			cursor default
			text-decoration none
			border-color sidebar-borders
			color #0075C0

		> .fa
			font-size 22px
			color #686868
			transition all .35s ease

		&.menuIsOpen
			border-color transparent

			&:hover > .fa
				color #0075C0

	> #mainContainer
		flex 4
		position relative
		display flex
		height 100%
		max-width 100%

		> #main
			flex 1
			margin auto 0
			height 100%
			max-width 100%

			display flex
			flex-direction column

			// header animation durations
			duration-to-small = 0.2s
			duration-to-big1 = 0.5s
			duration-to-big2 = 0.1s
			duration-to-big3 = 0.3s

			> header
				height 200px
				display flex
				align-items center
				flex-direction column
				justify-content center
				height 100%

				border-bottom-color hsla(0, 0%, 90%, 0.0)
				border-bottom-style solid
				border-bottom-width 1px

				padding 0 20px

				transition-property height, border-bottom-color
				transition-timing-function ease
				transition-duration duration-to-big1
				transition-delay 0

				.brandContainer
					position absolute
					bottom 0px
					right 0px

				.logoContainer
					overflow hidden
					text-align center
					padding 10px

					transition all duration-to-big1 ease

					img, .subtitle
						transition opacity duration-to-big3 linear (duration-to-big1 + duration-to-big2)
						opacity 1

					.subtitle
						font-size 36px
						text-align center

				&.small
					height 100px

					transition-property border-bottom-color
					transition-timing-function ease
					transition-duration duration-to-small
					transition-delay 0

					.logoContainer
						height 0

						padding 0

						transition all duration-to-small ease

						img, .subtitle
							transition opacity duration-to-small step-start
							opacity 0

				.searchBoxContainer
					margin 0px auto
					padding 30px
					min-width 400px
					width 50%
					max-width 550px

			> .smallHeaderLogo
				position absolute
				left 30px
				top 30px

				img
					max-height 40px
					cursor default

			.clientTableWrapper
				flex 1
				display flex
				flex-direction column

				#filterSelectionContainer
					text-align right

					#toggleDeactivated
						font-size 14px

						.checkbox
							margin-right 25px


	> #menuContainer
		flex 0
		display flex
		flex-direction column
		justify-content center
		padding 25px 0px
		overflow hidden
		color hsl(hue(sidebar-bg), 15%, 35%)
		background hsl(hue(logo-light-blue), 35%, 94%)
		border-left 2px solid sidebar-borders

		transition all 1s ease

		&.menuIsOpen
			flex 1

		> #menuContent
			flex 1
			display flex
			flex-direction column
			overflow hidden
			width auto

			#userMenu
				flex 1
				display flex
				justify-content center
				align-items center
				max-height 300px

				#avatar
					text-align center

					> .fa
						font-size 80px
						width 1.5em
						height 1.5em
						padding 15px
						margin 0px auto
						display inline-block
						text-align center
						color hsl(hue(logo-light-blue), 35%, 94%)
						background white
						border-radius 50%
						border 2px dashed hsl(hue(logo-light-blue), 35%, 94%)

				h3
					font-size 20px
					text-align center
					font-weight 300