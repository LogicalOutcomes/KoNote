.planView
	flex 1
	display flex

	> .targetList
		flex 1
		overflow inherit
		display flex
		flex-direction column

		> .empty
			text-align center

			> .message
				padding 100px 80px 50px

				color #888
				font-size 16px

			> .btn > .fa
				padding-right 10px

		> .toolbar
			display flex
			flex-shrink 0

			border-bottom 1px solid sidebar-borders

			padding 21px 25px

			button
				outline none

				> .fa
					margin-right 8px

			> div

				&.leftMenu
					flex 1

					.saveButton
						padding-right 30px
						padding-left 30px
						transition all 0.5s ease

				&.rightMenu
					text-align right

					.createTemplateButton
						border none
						background white
						margin-left 15px

						transition all 0.25 ease

						&:hover, &:focus
							outline none
							color #286090

						> .fa
							margin 0

			@media (max-width: 1150px)
				display block

				> div
					display block
					flex none
					width 100%

					> button
						width 100%

					&.rightMenu
						margin-top 10px
						display flex

						> .btn
							flex 3

						> .printButton
							flex 1

		> .sections
			position relative

			flex 1
			overflow-y auto
			overflow-x hidden
			padding 0 25px 25px 25px

			// TODO: Make this multi-use (it's used again in targets!)
			&.status-completed, &.status-deactivated
				padding 0

			.inactiveSectionHeader
				cursor default
				font-size 16px
				opacity 0.8
				transition opacity .15s ease

				&:hover
					opacity 1

				.fa
					font-size 1.25em
					padding 12px 8px
					transform rotate(0deg)
					transition transform .25s ease

					&.expanded
						transform rotate(90deg)

			.section
				padding-bottom 25px

				&.status-completed, &.status-deactivated
					padding 0
					padding-left 20px

				> .sectionHeader
					display flex
					align-items center
					justify-content space-between

					border-color sidebar-borders
					border-style none
					border-width 1px

					padding 10px 25px 5px 10px

					> .statusButtonGroup
						display flex

						> .statusButton
							cursor default
							flex 1
							display flex
							justify-content center
							align-items center
							padding 8px
							padding-right 2px

							font-size 18px
							opacity 0.6
							transition opacity .15s ease

							&:hover
								opacity 1

					&.inline
						margin 0 -30px

						&.invisible
							opacity 0

					&.sticky
						position absolute
						top 0
						left 0
						right 0

						background hsla(0, 0%, 100%, 0.8)

						&.invisible
							display none

					> .sectionName
						flex 1
						padding 5px 0

						font-size 24px
						font-weight 300

					> .btn-group > .btn > .fa
						padding-right 6px

				> .noTargets
					padding 25px 0

					color #888
					text-align center

				> .targets
					padding 15px 0

					// TODO: Make this multi-use
					&.status-completed, &.status-deactivated
						padding 0
						padding-left 20px

					> .inactiveTargetHeader
						cursor default
						font-size 16px
						opacity 0.8
						transition opacity .15s ease

						&:hover
							opacity 1

						.fa
							font-size 1.25em
							padding 12px 8px
							transform rotate(0deg)
							transition transform .25s ease

							&.expanded
								transform rotate(90deg)

					> .target
						margin-bottom 20px

						border 1px solid sidebar-borders
						border-radius 5px

						padding 15px 20px

						transition all 0.15s linear

						&:last-child
							margin-bottom 0 !important

						&.hasChanges
							background #EEFFF5
							border-color #C9FFB2

						&.isSelected
							background hsl(202, 35%, 94%)

							&.hasChanges
								background #C9FFB2
								border-color #A4D291

							> .nameContainer, > .descriptionContainer
								input, textarea
									border 1px solid #ccc
									box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)

							> .nameContainer
								> .statusButtonGroup
									display flex

							> .metrics

								.addMetricButton
									outline none
									display block

									text-decoration none

						&.readOnly
							input[disabled], textarea[disabled]
								background white

						&.blink
							background #7ecdfc !important
							border-color #68AAD2 !important

						> .nameContainer, > .descriptionContainer
							> div
								cursor default

							> .field
								width 100%

							input, textarea
								padding 2px 5px
								border none
								box-shadow none
								transition none

						> .nameContainer
							display flex
							flex-direction row

							padding-bottom 15px
							font-weight 700

							> .statusButtonGroup
								display none

								> .statusButton
									flex 1
									display flex
									justify-content center
									align-items center
									padding 8px
									padding-left 12px
									padding-right 2px

									font-size 18px
									opacity 0.6
									transition opacity .15s ease

									&:hover
										opacity 1

						> .metrics
							padding-top 15px

							> .metricsList
								display flex
								flex-wrap wrap

								margin -5px

								> .metricWidget
									margin 5px

							> .metricLookupContainer
								clear both
								display none

	> .targetDetail
		overflow-y auto
		overflow-x hidden
		flex 1

		border-left 2px solid sidebar-borders

		> .noSelection
			padding 100px 0

			color #888
			text-align center
