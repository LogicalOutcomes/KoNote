.manageProgramClientsView
	padding-top 15px
	display flex
	flex-direction column
	overflow auto

	.innerContainer
		flex 1
		display flex
		height 300px

		> div
			flex 1

	.programClientsContainer
		display flex
		overflow auto

		.programClients
			display flex
			flex-direction column
			flex 1

			h3
				border-bottom 2px solid #eee
				padding-bottom 10px

			.panel-heading
				padding-left 0
				padding-right 0

				.panel-title
					padding-left 8px
					padding-right 8px

				.badge
					float right

			.panel-body
				padding 0
				flex 1

				.noData
					text-align center
					padding 15px
					font-style italic


	.clientPickerContainer
		display flex
		overflow auto
		padding-left 10px

		.clientPicker
			flex 1
			overflow auto
			display flex

			.panel-body
				display flex
				overflow auto
				padding 0

			> .panel
				flex 1
				display flex
				flex-direction column
				margin 0 !important

				> .panel-body
					flex 1

					&.noData
						padding 15px

					table tbody tr:hover
						background #94da94



	table > thead
		font-weight bold

	table td > .noId
		text-align center

	table td
		cursor default !important
