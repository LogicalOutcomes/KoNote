#planView
	position relative
	flex 1
	overflow-y auto
	overflow-x hidden
	padding-bottom 25px

	// Overrides specific to sections
	> .inactiveToggleWrapper
		padding 10px
		transition opacity .15s linear
		border-top-width 1px
		border-top-style dashed

		&:not(.isExpanded)
			opacity 0.75

		&:last-child
			border-bottom-width 1px
			border-bottom-style dashed

		&:hover
			opacity 1

	// TODO: Extract to file
	.inactiveToggleWrapper

		&.status-completed
			background rgba(0, 255, 0, 0.05)
			border-color #ace6ac

		&.status-deactivated
			background rgba(0, 0, 0, 0.05)
			border-color #ded6d6

		&:not(.isExpanded)
			> span
				opacity 0.85

				&:hover
					opacity 1

		> span
			cursor default
			user-select none
			font-size 16px

			.fa
				font-size 1.25em
				padding 12px 8px
				transform rotate(0deg)
				transition transform .25s linear

		> .inactiveDataList
			display none

			.sectionHeader
				position relative // Don't fixate inactive section titles
				background none
				padding-left 20px

			.dragSource, .dragSource .fa
				display none !important


		&.isExpanded
			padding-bottom 15px

			> span .fa
				transform rotate(90deg)

			> .inactiveDataList
				display block