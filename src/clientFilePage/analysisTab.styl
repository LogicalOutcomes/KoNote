.analysisView
	flex 1
	display flex
	flex-direction column

	input[type=checkbox]
		-webkit-appearance none
		height 14px
		border 1px solid #8c8c8c
		border-radius 2px
		padding 0.5em
		background white
		outline none
		color grey
		transition all 0.2s
		margin-top 2px

	input[type=checkbox]:focus, input[type=checkbox]:hover
		//border-color black

	input[type=checkbox]:checked
		//background-color #dae6ed
		background-color cornflowerblue
		background-image url('img/check2.png')
		background-size contain
		background-repeat no-repeat
		border-color cornflowerblue

	input, label
		vertical-align middle

	.noData
		flex 1

		display flex
		align-items center
		justify-content center
		flex-direction row !important

		padding 100px

		color #AAA
		font-size 24px
		font-weight 300

	.mainWrapper
		flex 1
		display flex
		flex-direction row
		align-items stetch

		.leftPanel
			flex 5
			display flex
			flex-direction column
			border-right 2px solid sidebar-borders

			.timeScaleToolbar
				height 75px
				padding 20px

				> .timeSpanContainer
					flex 4
					display block
					position relative

					> .dateDisplay
						position absolute
						left 0
						right 0

						display flex
						width 100%

						@require 'timeSpanToolbar'

						> .timeSpanDate
							flex first

							&:2-child
								text-align left

							&:last-child
								text-align right

							> .date
								position relative
								transition background .25s ease
								cursor default
								background #fff
								padding 6px

								border-radius 5px

								font-weight 400
								color #5c5c5c

								.dateIcon
									display none

								&:hover
									background #f9f9f9

								> input // Hidden so span below can represent the date
									position absolute
									bottom 0
									left 0
									width 2px
									border 0
									height 100%
									padding 0
									outline none
									opacity 0

								> span
									padding 3px 5px

									.fa
										transition margin .25s ease
										color #8CA6B5
										margin 0

								@media screen and (max-width: 1145px)
									.dateIcon
										display inline !important
									.dateText
										display none

				> .granularContainer
					flex 2

			.chartContainer
				flex 50
				display flex
				height 80%

				padding 20px 5px

				> .chartInner
					flex 1

					display flex
					align-items center
					justify-content center

					> #eventInfo
						display none
						z-index 9999
						position absolute
						min-width 150px
						max-width 500px
						margin-right 10px

						background #fff
						border 1px solid sidebar-borders

						> .title
							font-weight 600 !important
							background sidebar-borders
							padding 5px

							color #4c5d67
							font-size 14px

						> .info

							> .description
								font-weight normal
								padding 5px
								font-size 12px

							> .timeSpan
								font-size 10px

								> div
									text-align right
									background #eee
									padding 5px

					.yearLine
						font-weight bold
						opacity 0.7

						text
							// Moves year value to right side of yearLine
							transform rotate(-90deg) translateY(17px)

					.chart
						flex 1

						.c3-tooltip-container
							max-width 250px
							overflow hidden

							table
								tr.isHovered > td
									font-weight bold

								td.definition
									background #eee
									max-height 50px !important
									text-overflow ellipsis

						svg
							width 100%

						.c3-zoom-rect
							display none !important

			.chartOptionsContainer
				display flex
				justify-content space-between
				padding 20px 25px

				> div
					display flex
					align-items center

					label
						margin 0
						padding-left 10px
						padding-right 2px

					input[type=checkbox]
						margin 0

				button
					border none
					color #4c5d67


		.selectionPanel
			flex 3
			display flex
			flex-direction column
			overflow-y auto
			overflow-x hidden
			transition flex-grow 200ms

			&.collapsed
				flex 0 0 40px

			.panelHeader
				color #c0c0c0
				//text-align center

				> .selectionToggle
					border-top none

				button
					background none
					outline none
					//border 1px solid sidebar-borders
					border none
					transition all .2s ease

				&:hover
					button
						color black

			.dataType
				clear both

				h2
					cursor default
					color gray
					font-size 20px
					font-weight 300
					margin 0
					padding 12px
					border-top 1px dotted sidebar-borders
					transition all .15s ease
					text-transform uppercase

					&.noEventPoints, &.noMetricPoints
						opacity 0.65
						font-size 14px
						font-weight 400
						border-bottom 0
						padding 20px 15px
						text-align center

					&.noEventPoints
						padding-top 27px

					&.noMetricPoints
						border-top 1px solid sidebar-borders

					.helper
						cursor default
						color #456E86
						float right
						font-size 12px
						line-height 24px
						text-transform capitalize

						> input[type=checkbox]
							margin-top -2px

				h3
					margin 10px 0 0

					color grey
					cursor default
					font-size 12px
					font-weight 200
					letter-spacing 1px
					text-transform uppercase
					user-select none

					transition color 0.2s

					&.collapsable:hover
						color #000

					> .fa
						padding-right 5px

						font-weight 400

				.checkbox
					margin 0
					padding-bottom 5px

					&:hover
						label, input
							color #333

						.fa-star
							opacity 1

					label
						width 100%

						color #5c5c5c
						font-size 13px

						transition color 0.2s

					input
						transition color 0.2s

					.colorKeyCount
						float right
						display flex
						align-items center
						justify-content center
						background #cccccc
						min-width 18px
						height 18px
						padding 0 2px
						margin-left 4px
						text-align center
						font-size 10px
						font-weight 700
						color white
						//text-shadow 0 1px 1px rgba(0,0,0,0.3)

						&.circle
							border-radius 2px

					.fa-star // Same as from newProgNotePage
						opacity 0
						transition opacity .15s ease
						color #888
						float right
						border none
						margin-top 3px
						margin-right 5px

						&:hover
							color #337ab7

					&.isHighlighted .fa-star
						opacity 1
						color yellow
						-webkit-text-stroke 1px #888

				.dataOptions
					padding 10px

				.inactive
					padding 10px
					border-top 1px dotted sidebar-borders

					h3
						margin-bottom 10px

				&.metrics
					&.collapsed
						display none

					// TODO dead code?
					h4
						padding 0
						margin 0
						font-size 14px
						font-weight 600

					h5
						color grey
						cursor default
						user-select none

						transition color 0.2s

						&.collapsable:hover
							color #000

						> .fa
							padding-right 5px

							font-weight 400

					section
						padding-left 10px
						margin-bottom 1em

				&.progEvents
					&.collapsed
						display none

					section
						padding-left 10px
						margin-bottom 1em

					h3
						margin-bottom 10px
