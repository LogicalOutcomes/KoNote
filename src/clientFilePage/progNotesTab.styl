.progNotesView
	display flex
	flex-direction column

	> .toolbar
		border-bottom 2px solid sidebar-borders

		> .btn
			margin 20px
			margin-right 0

			> .fa
				padding-right 8px

		> .popover
			max-width none

			.popover-content
				> textarea
					width 500px
					height 300px

				> .buttonBar
					padding 10px 0 0

					text-align right

					> .btn
						margin-left 5px

	> .panes
		display flex
		flex 1

		> .progNotes
			flex 50%
			overflow auto

			padding 10px 20px
			
			> .empty
				text-align center
				
				> .message
					padding 100px 80px 50px

					color #888
					font-size 16px

				> .btn
					clear both
					margin 15px
					
					> .fa
						padding-right 10px
						
				> .popover
					max-width none

					.popover-content
						> textarea
							width 500px
							height 300px

						> .buttonBar
							padding 10px 0 0

							text-align right

							> .btn
								margin-left 5px

			> .cancelStub
				margin 0 -6px 20px

				border 1px solid hsl(22, 85%, 80%)
				border-radius 3px

				background hsl(22, 85%, 93%)

				padding 11px 14px

				> .toggleDetails
					float right

				> h3
					margin 0

					padding 0 0 10px

					font-size 16px
					font-weight 700

				> .details
					> h4
						margin 0

						padding 10px 0

						font-size 14px

					> .reason
						padding 0 10px

						font-style italic

					> .progNote
						padding 20px 0 0 !important

			> .progNote, > .cancelStub > .details > .progNote
				flex 1

				padding-bottom 30px

				> .header
					display flex

					border-bottom 2px solid sidebar-borders

					padding 5px 0

					font-size 24px
					font-weight 300

					> .timestamp
						flex 1

				&.basic
					> .notes
						padding 20px 0 0

						> .progNoteToolbar
							float right

							display flex

							> .cancel
								display inline-block

								padding 0 0 5px

								color black
								cursor pointer

								&:hover
									color red

						> br
							display block

				&.full
					> .progNoteList
						position relative

						> .progNoteToolbar
							position absolute
							top 0
							right 0

							display flex

							a
								font-size 1.2em
								opacity 0.5
								transition opacity .15s ease
								display inline-block

								padding 8px
								padding-top 0

								color black
								cursor pointer
								
								&:hover
									opacity 1

						> .unit
							padding-bottom 20px
							
							&:last-child
								padding-bottom 0px
							
							h1
								font-size 26px
								
							h2
								font-size 22px
								font-weight 100
								
							h3
								font-weight 600
								font-size 18px
								color #6B6B6B

							&.basic
								cursor default
								
								h3
									font-size 22px
									
								&.selected, &:hover
									h3
										color #337ab7

								> .empty
									padding 0 2px
									color #888

								> .metrics
									padding-top 5px

							&.plan
								> .empty
									padding 0 2px
									color #888
									
								section
									> .target
										cursor default
										padding-left 15px
										border-left 2px solid #eee
										transition all .15s ease
										
										&:hover
											border-left-color #B6B6B6
											
											h3
												color #494949
										
										&.selected
											border-left-color #337ab7
											padding-left 20px
											
											h3
												color #337ab7

										> .empty
											padding 0 2px

											color #888

										> .metrics
											display flex
											flex-wrap wrap

											margin -5px

											padding-top 5px

											> .metricWidget
												margin 5px

		> .progNoteDetailView
			flex 50%

			border-left 2px solid sidebar-borders
