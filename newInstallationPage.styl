#newInstallationPage	
	height 100%
	display flex
	flex-direction column
	justify-content center
	align-items stretch
	
	overflow hidden
	background-color: #3176aa
	color #fff
	
	section
		display flex
		flex-direction column
		
		height 100%
		
		align-items center
		justify-content center
		
		> #brandContainer
			flex 9
			text-align center
			margin-bottom -50px
			display flex
			flex-direction column
			justify-content center
			
			> div
			
				img
					height 185px
					width auto
					
				#version
					font-size 18px
					line-height 26px
					font-weight 300
				
		
		> #contentContainer
			display flex
			flex-direction column
			flex 7
			padding 25px
			align-items center

			
			> div
				display flex
				flex-direction column
				align-items center
					
				h2
					padding-bottom 15px
					border-bottom 1px solid #216293
					
				p
					font-size 19px
					line-height 1.75em
					
					font-weight 400
					text-align center
					
				.form-group
					width 50%
					min-width 200px
					position relative
					
					input
						position relative
						letter-spacing 2px
					
					.glyphicon
						opacity 0
					&.has-success .glyphicon
						opacity 1
					
				.btn .fa 
					margin-left 15px
					
		> #helpContainer
			flex 1
			display flex
			align-items center
			justify-content center
			
			span, a
				opacity .8
			
			a				
				color white
				text-decoration underline
				margin-left 5px
				transition all .25s ease
				
				&:hover
					opacity 1