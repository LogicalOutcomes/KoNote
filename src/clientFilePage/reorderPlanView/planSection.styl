.planSection
	border 1px dashed transparent
	border-left 0
	padding-bottom 15px
	opacity 1
	transition all .5s ease

	&.isDragging, &.isHovered
		background #eaf1f5 !important
		border-color #cadbe5

		.sectionDragSource
			opacity 1

	&.isDragging
		opacity 0.75

		.sectionDragSource
			background #3f903f !important
			color white

	&.isHovered .sectionDragSource
		background #dae6ed

	&:hover
		.dragSource
			opacity .6


	.sectionDragSource:hover
		opacity 1

	&.hasTargets
		.sectionNameContainer
			padding-bottom 5px

	&.isCollapsed
		height 0px
		overflow hidden
		padding 0
		margin 0
		border 0
		opacity 0

	.sectionNameContainer
		display flex

		.name
			font-size 24px
			font-weight 300
			padding-left 10px
			display flex
			align-items center

			&:hover
				cursor default
				text-decoration underline

	.targets
		padding 15px 25px 0px 25px
		padding-top 0


	// Default dragSource styling for sections & targets
	.dragSource
		opacity 0
		display flex
		align-items center
		justify-content center

		width 35px
		cursor move
		transition opacity .15s ease
		padding 15px
