#mainMenu
	flex 0
	display flex
	flex-direction column
	justify-content center
	overflow visible
	color hsl(hue(sidebar-bg), 15%, 35%)
	background hsl(hue(logo-light-blue), 35%, 94%)
	border-left 2px solid sidebar-borders
	z-index 1000

	transition all 1s ease

	&.isOpen
		flex 1

	#menuContainer
		flex 1
		display flex
		flex-direction column
		min-height 650px
		overflow-y auto

		> #user
			flex 1
			display flex
			justify-content center
			align-items center
			max-height 300px

			text-align center
			padding-top 15px

			#avatar
				flex 1
				display flex

				> .fa
					font-size 5em
					width 1.5em
					height 1.5em
					margin 0px auto
					display inline-block
					text-align center
					color hsl(hue(logo-light-blue), 35%, 94%)
					background white
					border-radius 50%
					border 2px dashed hsl(hue(logo-light-blue), 35%, 94%)
					padding 15px

			h3
				font-size 20px
				text-align center
				font-weight 300

			.currentProgram
				color hsl(hue(sidebar-bg), 15%, 35%)

		> #items
			justify-self flex-end

			> ul
				overflow hidden
				width 100%
				margin 0px
				padding 0
				list-style none

				> li
					line-height 2em

					&.active, &:hover
						background darken(sidebar-bg, 5%)

					> div
						display block
						padding 15px 20px

						cursor default
						font-weight 600

						> .fa
							padding-right 10px
							transition padding-right .25s ease