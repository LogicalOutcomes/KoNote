.filterBar
	display flex
	position relative
	background #eaf1f5
	color rgb(76, 93, 103)
	height 50px
	padding 0px 3%

	section
		display flex

		&:first-child
			flex 5

		&.filters
			flex 4
			display flex
			justify-content flex-end

			> div
				flex 1
				display flex
				align-items center
				justify-content center

				font-weight 500 !important
				cursor default

				&:first-child
					padding-right 10px

				&:hover
					opacity 1

		&.closeButton
			flex 1
			position relative
			max-width 30px
			display flex
			justify-content center
			align-items center

			.fa
				font-size 1.5em
				float right
				transition opacity .2s ease
				padding 5px

				&:hover
					opacity 0.75

		input
			font-size 1em
			border none
			box-shadow none
			background none
			padding 10px 2%
			height 100%



	.filterDropdownMenu
		font-size 1em
		position relative
		z-index 1059 // Under quickNote popover
		max-width 150px

		.option
			display flex
			align-items center

			> .value
				// Limit width with ...
				max-width 115px
				overflow hidden
				white-space nowrap
				text-overflow ellipsis

			> .fa
				padding-left 5px

		.selectedValue
			flex 1
			font-weight 600
			padding 10px 3%
			height 100%

			&:hover .value
				opacity 100%

		.colorKeyBubble
			margin-right 5px
			text-align center

			.fa
				color #eaf1f5
				font-size 10px

		ul.filterOptions
			margin 0
			padding 0
			list-style none
			position absolute
			top 100%
			left 0
			display none
			transition opacity .25s ease
			min-width 125px

			li
				font-weight 400
				font-size 0.95em
				background #eaf1f5
				border-bottom 1px solid #cadbe5
				padding 7px 7px
				width 100%

				&:hover
					background #cadbe5

				&:last-child
					border-bottom none

				&.selectAllOption
					font-weight 600
					// border-bottom-style dashed

		&.isOpen
			ul.filterOptions
				display block


	@media screen and (max-width: 1200px)
		font-size 0.9em

	// 2-row display
	@media screen and (max-width: 1024px)
		font-size 1em
		display block
		height auto

		section
			display block

		section.filters > div
			padding-top 5px
			justify-content flex-start

			ul
				width 100%

		input
			padding 0px inherit !important
			padding-right 30px !important

		.closeButton
			position absolute !important
			top 5px
			right 5px
