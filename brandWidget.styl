.brandContainer
	overflow-y hidden
	overflow-x visible
	padding 20px
	
	.logoKN
		height 20px
		display inline-flex
		float left
		transition transform 0.8s ease
		transform rotate(-180deg)
	.logoKonode
		display inline-flex
		height 15px
		width auto
		margin-left 10px
		transition all 0.5s ease
		margin-bottom -20px
		opacity 0
		
	&:hover
		.logoKN
			transform rotate(360deg)
		.logoKonode
			margin-bottom 2px
			opacity 1
			
	&.reverse
		.logoKN
			float right
		.logoKonode
			margin-right 10px
			margin-left 0px