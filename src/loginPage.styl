.loginPage
	height 100%
	overflow hidden
	
	display flex
	align-items center
	justify-content center
	background radial-gradient(circle, #1EA1F5, #3175AA)
	
	border-radius 8px

	color white
	border 2px solid rgba(255,255,255,0.25)
	
	-webkit-app-region: drag
	
	#quitIcon
		position absolute
		padding 15px
		top 0
		right 0
		font-size 24px
		color black
		opacity 0.4
		transition all .25s ease
		
		&:hover
			cursor pointer
			opacity 0.9
			color white
	
	#loginForm
		flex 1
		margin 15%
		text-align center
	
	#logoContainer
		display inline-block
		// margin 20% 15%
		width 65%
		height auto
		-webkit-user-select none
		padding 25px
		border-radius 50%
		border 4px solid rgba(255,255,255,0)
		
		> img
			width 100%
			height auto
		
	#formContainer
		margin-top 20%
		-webkit-app-region: no-drag

		.btn-toolbar
			display flex
			
			.btn-link
				font-size .9em
				color white
				opacity .8
				
			button[type=submit]
				transition all .15s ease
			
			> button
				flex 1
