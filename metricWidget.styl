.metricWidget
	display flex
	align-items center

	height 30px

	background hsl(202, 95%, 74%)

	border-radius 3px

	color white

	> .icon
		margin-right -4px

		width 30px
		height 30px

		font-size 14px
		font-weight 700
		line-height 30px
		text-align center

	> .value
		margin 4px

		width 35px
		height 22px

		border none
		border-radius 3px
		outline none

		background hsl(202, 95%, 94%)
		color hsl(202, 25%, 25%)
		font-size 16px
		font-weight 400
		text-align center

	> .name
		padding 0 9px 0 3px

		color white
		font-weight 700
		line-height 30px

	> .delete
		margin-left -3px

		padding-right 7px

		cursor pointer

	.tooltipContent
		text-align left
